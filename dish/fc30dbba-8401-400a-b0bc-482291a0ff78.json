  "steps": [
    {
      "description": "土豆去皮、切成5cm大块",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "西红柿切十字花刀，开水烫后去皮",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "西红柿去芯，切3cm小块备用",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "葱切4g葱花，剩下的掰成5-8cm大段",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "牛肉泡凉水半小时去血水",
      "time_unit": "分钟",
      "time": [
        30,
        30
      ],
      "time_type": "wait",
      "work_stage": "prepare"
    },
    {
      "description": "凉水下锅煮牛肉至表面变白，撇去浮末",
      "time_unit": "分钟",
      "time": [
        5,
        8
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "洋葱切0.5-1cm小粒",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "凉水没过牛肉，放入高压锅，加葱段、姜片、料酒",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "高压锅上汽压20分钟",
      "time_unit": "分钟",
      "time": [
        20,
        20
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "取出牛肉切5cm大块，挑出姜，汤盛出备用",
      "time_unit": "分钟",
      "time": [
        5,
        8
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "倒油，油四到五成热后下花椒八角香叶",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "出香味后挑出香料",
      "time_unit": "秒",
      "time": [
        30,
        45
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "下入牛肉、葱姜炒香",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "加入生抽、料酒、胡椒粉、番茄制品炒匀",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "加入洋葱炒至透明",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "加入西红柿炒至化开软烂",
      "time_unit": "分钟",
      "time": [
        5,
        8
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "倒入剩下的汤",
      "time_unit": "秒",
      "time": [
        30,
        45
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "中火开锅后转小火炖煮",
      "time_unit": "分钟",
      "time": [
        5,
        10
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "出锅前30-40分钟加土豆",
