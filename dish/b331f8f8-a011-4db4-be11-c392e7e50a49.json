  ],
  "steps": [
    {
      "description": "肉蟹掀盖后对半砍开，蟹钳用刀背轻轻拍裂，切口和蟹钳蘸一下生粉，撒5g生粉到蟹盖中盖住蟹黄",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "洋葱切成洋葱碎",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "大蒜切碎",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "烧一壶开水",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "wait",
      "work_stage": "prepare"
    },
    {
      "description": "起锅烧油，倒入约20ml食用油，等待10秒让油温升高",
      "time_unit": "秒",
      "time": [
        10,
        10
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "将螃蟹切口朝下放入锅中煎20秒封住蟹黄蟹肉，然后翻面每面煎10秒",
      "time_unit": "秒",
      "time": [
        40,
        40
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "将螃蟹盖放入锅中，用勺子舀热油泼到蟹盖中煎封蟹黄",
      "time_unit": "秒",
      "time": [
        20,
        20
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "再倒入10ml食用油，大火让油温升高至轻微冒烟",
      "time_unit": "秒",
      "time": [
        15,
        20
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "将大蒜末、洋葱碎倒入炒10秒钟",
      "time_unit": "秒",
      "time": [
        10,
        10
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "将咖喱块放入锅中炒化，放入煎好的螃蟹翻炒均匀",
      "time_unit": "秒",
      "time": [
        20,
        30
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "倒入开水300ml焖煮3分钟",
      "time_unit": "分钟",
      "time": [
        3,
        3
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "倒入椰浆和蛋清，关火后不断翻炒至酱汁变浓稠",
      "time_unit": "秒",
      "time": [
        30,
        45
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "出锅",
      "time_unit": "秒",
      "time": [
        10,
        15
      ],
      "time_type": "take",
      "work_stage": "other"
    }
