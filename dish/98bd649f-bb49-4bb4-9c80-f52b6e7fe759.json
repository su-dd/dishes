      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "热锅20s，加入份数*8ml油",
      "time_unit": "秒",
      "time": [
        20,
        20
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "加入刚刚准备好的一碗鸡蛋，翻炒大约20s至鸡蛋形成固态即可",
      "time_unit": "秒",
      "time": [
        20,
        20
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "将煎鸡蛋取出暂存",
      "time_unit": "秒",
      "time": [
        10,
        15
      ],
      "time_type": "take",
      "work_stage": "other"
    },
    {
      "description": "热锅20s，增加锅内的油到份数*10ml",
      "time_unit": "秒",
      "time": [
        20,
        20
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "加入第一步处理的火腿肠，翻炒10秒",
      "time_unit": "秒",
      "time": [
        10,
        10
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "加入第二步的面，翻炒30秒",
      "time_unit": "秒",
      "time": [
        30,
        30
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "加入第三步的调料碗，翻炒30秒",
      "time_unit": "秒",
      "time": [
        30,
        30
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "加入第四步的煎鸡蛋，翻炒30秒",
      "time_unit": "秒",
      "time": [
        30,
        30
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "关火盛盘即可",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "other"
    }
