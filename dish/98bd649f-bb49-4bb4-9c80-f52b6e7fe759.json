  "steps": [
    {
      "description": "将火腿肠撕开包装，切成宽度1cm的小块",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "向煮锅中加入300ml水，煮沸",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "加入方便面面饼，煮45秒，煮的过程中将其挑动，把面条打散",
      "time_unit": "秒",
      "time": [
        45,
        45
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "面条打散后立刻关火",
      "time_unit": "秒",
      "time": [
        5,
        10
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "将面汤和面分离，用凉水冲一下面条",
      "time_unit": "秒",
      "time": [
        20,
        30
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "准备一个小碗，将方便面的调料包挤进去",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "prepare"
    },
    {
      "description": "将面汤取出80ml，加入小碗，搅匀，得到调料碗",
      "time_unit": "秒",
      "time": [
        30,
        45
      ],
      "time_type": "take",
      "work_stage": "prepare"
    },
    {
      "description": "取出计算好的数量的鸡蛋，打入一个小碗",
