      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "大火煮开水后撇去浮沫",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "继续煮15分钟至瘦肉部分可以用筷子轻松刺穿",
      "time_unit": "分钟",
      "time": [
        15,
        15
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "青红椒切圈",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "蒜苗切段",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "生姜切小薄片",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "将豆瓣酱和生抽提前混合",
      "time_unit": "秒",
      "time": [
        30,
        45
      ],
      "time_type": "take",
      "work_stage": "prepare"
    },
    {
      "description": "将煮熟的五花肉捞出放入冷水晾凉",
      "time_unit": "分钟",
      "time": [
        5,
        8
      ],
      "time_type": "wait",
      "work_stage": "prepare"
    },
    {
      "description": "擦干五花肉的水分",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "prepare"
    },
    {
      "description": "将五花肉切成2mm的薄片",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "锅烧热，放入一层底油滑锅",
      "time_unit": "秒",
      "time": [
        30,
        45
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "放入五花肉煸炒至肥肉透明，肉片微卷",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "倒入豆瓣生抽混合物和味精翻炒15秒",
      "time_unit": "秒",
      "time": [
        15,
        15
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "放入青红椒圈和小姜片，放入豆瓣酱翻炒30秒",
      "time_unit": "秒",
      "time": [
        30,
        30
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "放入蒜苗翻炒60秒",
      "time_unit": "秒",
      "time": [
        60,
        60
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "出锅",
      "time_unit": "秒",
      "time": [
        15,
        20
      ],
      "time_type": "take",
      "work_stage": "other"
    },
    {
      "description": "五花肉冷藏1个小时",
      "time_unit": "小时",
      "time": [
        1,
        1
      ],
      "time_type": "wait",
      "work_stage": "prepare"
    },
    {
      "description": "辣椒干煸30-45秒",
      "time_unit": "秒",
      "time": [
        30,
        45
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "锅烧热，放入底油滑锅，放入姜片煸炒15秒",
      "time_unit": "秒",
      "time": [
        15,
        15
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "倒入五花肉，间隔10秒翻炒一次，待出现焦黄色",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "倒入干煸过的辣椒、豆瓣酱，生抽调味，翻炒60秒",
      "time_unit": "秒",
      "time": [
        60,
        60
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "倒入蒜苗翻炒10秒",
      "time_unit": "秒",
      "time": [
        10,
        10
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "出锅",
      "time_unit": "秒",
      "time": [
        15,
        20
      ],
      "time_type": "take",
      "work_stage": "other"
    }
