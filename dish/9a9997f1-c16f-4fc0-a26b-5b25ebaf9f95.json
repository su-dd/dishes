  "steps": [
    {
      "description": "锅烧热，用手将五花肉紧紧压在锅上炙皮处理猪皮",
      "time_unit": "秒",
      "time": [
        20,
        30
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "用钢丝球把皮刷干净，至黑色部分碳化部分被完全去除",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "将五花肉放入锅中，放入冷水、生姜片、料酒和小葱",
