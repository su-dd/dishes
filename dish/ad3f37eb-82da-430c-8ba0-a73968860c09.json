    },
    {
      "name": "火腿",
      "amount": 4,
      "unit": "个",
      "remake": "份数*2个"
    },
    {
      "name": "黄瓜",
      "amount": 60,
      "unit": "克",
      "remake": "可选，份数*30g"
    },
    {
      "name": "胡萝卜",
      "amount": 60,
      "unit": "克",
      "remake": "可选，份数*30g"
    },
