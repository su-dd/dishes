  "steps": [
    {
      "description": "米饭提前用铲子铲成小块",
      "time_unit": "分钟",
      "time": [
        2,
        5
      ],
      "time_type": "take",
      "work_stage": "prepare"
    },
    {
      "description": "火腿肠、胡萝卜、黄瓜等根据需求切片或者块状",
      "time_unit": "分钟",
      "time": [
        3,
        8
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "将蛋白，蛋黄分开，分别打入一个大碗里，各自搅匀",
      "time_unit": "分钟",
      "time": [
        2,
        4
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "大火热锅，待锅里冒烟放入食用油",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "放入蛋白，待主体凝固后盛出备用",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "放入蛋黄，待主体凝固",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "倒入火腿肠、熟肉，胡萝卜、黄瓜等备料、翻炒10秒钟",
      "time_unit": "秒",
      "time": [
        10,
        10
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "重新倒入蛋白，翻炒5秒钟",
      "time_unit": "秒",
      "time": [
        5,
        5
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "倒入米饭大火翻炒，使每一粒饭都裹上鸡蛋",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "将米饭的块状捣碎，待米饭全部捣碎再翻炒均匀",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "加盐、胡椒粉、生抽",
      "time_unit": "秒",
      "time": [
        15,
        30
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "进一步翻炒均匀",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "倒入香葱再翻炒10秒钟",
      "time_unit": "秒",
      "time": [
        10,
        10
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "关火",
      "time_unit": "秒",
      "time": [
        5,
        10
      ],
      "time_type": "take",
      "work_stage": "other"
    },
    {
      "description": "盛入碗中",
      "time_unit": "秒",
      "time": [
        15,
        30
      ],
      "time_type": "take",
      "work_stage": "other"
    }
  ],
