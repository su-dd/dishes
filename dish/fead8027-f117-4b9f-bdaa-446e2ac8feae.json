  "steps": [
    {
      "description": "萝卜去皮、滚刀切成3-5cm的大块",
      "time_unit": "分钟",
      "time": [
        2,
        5
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "羊排在购买时让卖家切好，备用",
      "time_unit": "分钟",
      "time": [
        0,
        0
      ],
      "time_type": "wait",
      "work_stage": "prepare"
    },
    {
      "description": "羊肉冷水下锅，加入一半料酒和葱姜，煮10分钟去掉血腥，可选撇去血沫",
      "time_unit": "分钟",
      "time": [
        10,
        10
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "另起锅冷水放入白萝卜和一半冰糖，水开后煮5分钟去辣味",
      "time_unit": "分钟",
      "time": [
        5,
        5
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "盛出焯好的羊排放入高压锅，加水没过食材并额外加300ml水",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "加入剩余葱姜料酒、花椒、冰糖、白芷（可选）、盐，盖锅等待上汽",
      "time_unit": "分钟",
      "time": [
        5,
        8
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "高压锅中火炖15分钟（普通锅炖40-60分钟）",
      "time_unit": "分钟",
      "time": [
        15,
        60
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "关火等待高压锅放气完毕",
      "time_unit": "分钟",
      "time": [
        5,
        10
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "开盖加入焯好的萝卜，调味加3-10g食盐或水，品尝咸淡",
      "time_unit": "分钟",
      "time": [
        2,
        4
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "中火高压锅上汽再炖10分钟（普通锅盖盖炖20分钟）",
      "time_unit": "分钟",
      "time": [
        10,
        20
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "关火盛盘",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "other"
    }
  ],
  "take_time": [
    21,
    27
  ],
