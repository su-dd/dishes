  "steps": [
    {
      "description": "将肘子刮洗干净，肘头朝外、肘把朝里、肘皮朝下放在案板上",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "用刀在正中由肘头向肘把沿着腿骨将皮剖开，剔去腿骨两边的肉，底部骨与肉相连，使骨头露出",
      "time_unit": "分钟",
      "time": [
        8,
        12
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "将两节腿骨由中间用刀背砸断",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "肘子放入煮锅煮至七成熟捞出",
      "time_unit": "分钟",
      "time": [
        25,
        35
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "用干净抹布擦干水，趁热用红酱油涂抹肉皮",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "取蒸锅一个，锅底放入八角、桂皮",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "prepare"
    },
    {
      "description": "将肘把的关节处用手掰断，不伤外皮，再将肘皮朝下装进蒸锅内",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "撒入精盐，用消过毒的干净纱布盖在肉上",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "将甜面酱、葱、红豆腐乳、红酱油、白酱油、姜、蒜等在纱布上抹开",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "用旺火蒸大约三小时（以蒸烂为准）",
      "time_unit": "小时",
      "time": [
        3,
        3
      ],
      "time_type": "wait",
      "work_stage": "cook"
    },
    {
      "description": "蒸完取出，揭去纱布，扣入盘中，拣去八角",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "other"
    },
    {
      "description": "上桌时另带葱段和甜面酱小碟",
      "time_unit": "分钟",
      "time": [
        1,
        2
      ],
      "time_type": "take",
      "work_stage": "other"
    }
  ],
