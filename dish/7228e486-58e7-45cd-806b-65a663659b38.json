  "steps": [
    {
      "description": "牛腱子肉清洗干净，用清水浸泡去除血水",
      "time_unit": "分钟",
      "time": [
        60,
        60
      ],
      "time_type": "wait",
      "work_stage": "prepare"
    },
    {
      "description": "用牙签或者叉子在牛腱子肉表面扎孔",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "加料酒、花椒、姜片后，用保鲜膜紧密包裹容器腌制",
      "time_unit": "小时",
      "time": [
        4,
        6
      ],
      "time_type": "wait",
      "work_stage": "deal"
    },
    {
      "description": "牛腱子肉切成8cm不超过10cm的肉块",
      "time_unit": "分钟",
      "time": [
        5,
        8
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
      "description": "牛腱子肉放入锅中，加入冷水至水面没过牛肉，开锅至水沸腾开始计时，同时捞出浮沫",
      "time_unit": "分钟",
      "time": [
        8,
        12
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "停火，捞出牛肉，用温水洗净",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "将洗净后的牛腱子肉放入砂锅或炖锅，加水没过牛腱子肉，开大火，放入除盐之外其他未使用的配料",
      "time_unit": "分钟",
      "time": [
        5,
        8
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "水开之后，大火转为小火，持续加热",
      "time_unit": "分钟",
      "time": [
        90,
        90
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "加盐后继续小火加热",
      "time_unit": "分钟",
      "time": [
        90,
        90
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "捞出牛腱子肉，用保鲜膜紧密包裹，放入冰箱冷藏",
      "time_unit": "小时",
      "time": [
        4,
        6
      ],
      "time_type": "wait",
      "work_stage": "prepare"
    },
    {
      "description": "取出后沿牛肉纹路切片",
      "time_unit": "分钟",
      "time": [
        3,
        5
      ],
      "time_type": "take",
      "work_stage": "deal"
    },
    {
