      "time": [
        20,
        30
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
    {
      "description": "呛入米酒25ml，水加到淹过猪肉，加入白胡椒粉、五香粉、八角、香叶、水煮蛋",
      "time_unit": "分钟",
      "time": [
        2,
        3
      ],
      "time_type": "take",
      "work_stage": "cook"
    },
